<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/jeopardyLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/startGame_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@drawable/border"
        android:padding="4dp"
        android:text="Play alone"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startMultiplayerGame_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Play with friends"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/alexPic"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/alex"
        android:layout_gravity="center"/>



    <TextView
        android:id="@+id/poweredby_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="powered by Jservice.io"
        android:layout_gravity="center"
        />

</LinearLayout>